<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/icon_back_left" />


        <TextView
            android:id="@+id/to_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:text="返回首页"
            android:textColor="#ff333333"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/done_icon" />


    <TextView
        android:id="@+id/preserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:text="已为您保存至系统相册"
        android:textColor="#ff333333"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/preserve_path"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:text="手机存储/qiheformateconverter/video/视频.mp4"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/look"
        android:layout_width="@dimen/dp_274"
        android:layout_height="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/record_tv_bg"
        android:gravity="center"
        android:text="立即查看"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/share"
        android:layout_width="@dimen/dp_274"
        android:layout_height="@dimen/dp_53"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@drawable/record_btn_bg"
        android:gravity="center"
        android:text="分享"
        android:textColor="#ff3d3c3f"
        android:textSize="@dimen/sp_16" />


</LinearLayout>