<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/dialog_privacy_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/users_note"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_privacy_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_note" />

                <TextView
                    android:text="我们为了更好地使用产品功能，需征求您地允许，获得以下权限："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:text="1.设备信息(含硬件型号、MAC地址、IP地址等)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="1.用于登录注册时注册时作为识别真实用户而非外挂软件、机器的依据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />
                <TextView
                    android:text="2.用于广告sdk形成特征标签、以便我们更好的改进产品"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:id="@+id/mac_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />


                <TextView
                    android:text="2.存储"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="用于数据缓存，页面缓存、优化页面中的展示效果，提升响应速度。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="3.访问网络"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="用于访问网络。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="4.获取网络状态"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="用于判断当前连接网络是否可用。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="5.获取WIFI状态"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="用于根据不同的WIFI状态显示页面。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="6.粗略位置信息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="第三方SDK中将收集粗略位置信息，用于广告投放与检测归因。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="7.应用程序列表信息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />

                <TextView
                    android:text="为了统计最终用户设备中各个移动应用的活跃情况，帮助分析并优化其产品功能和体验，减少对最终用户设备电量以及移动流量的消耗，我们会收集最终用户设备中的应用程序列表信息。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:lineSpacingExtra="@dimen/dp_4"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_14"
                    />


            </LinearLayout>
        </ScrollView>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="10dp"
            android:background="@color/color_E6E6E6"
            />

        <LinearLayout
            android:id="@+id/layout_to_do"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/privacy_exit"
                android:textColor="@color/colorGray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="40dp"
                android:background="@color/color_E6E6E6" />

            <Button
                android:id="@+id/btn_enter"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/privacy_agree"
                android:textColor="@color/color_029BFA"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</layout>