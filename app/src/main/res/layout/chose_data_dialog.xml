<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_7"
        android:paddingLeft="@dimen/dp_12"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_12">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="?android:attr/actionBarItemBackground"
                android:layout_centerVertical="true"
                android:id="@+id/canel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="@string/canel"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:background="?android:attr/actionBarItemBackground"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/sure_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="@string/sure"
                android:textColor="@color/color_888888"
                android:textSize="@dimen/sp_16" />

        </RelativeLayout>


            <com.qihe.imagecompression.view.WheelPicker
                android:id="@+id/wheel_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_230"
                android:layout_gravity="center_horizontal"
                app:wheel_atmospheric="true"
                app:wheel_curved="true"
                app:wheel_cyclic="true"
                app:wheel_item_align="center"
                app:wheel_item_text_color="@color/color_808080"
                app:wheel_item_text_size="@dimen/sp_18"
                app:wheel_selected_item_text_color="@color/color_333333" />


    </LinearLayout>

</layout>